{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {},
  "argocd": {},
  "kustomize": {},
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^/kubernetes/.*\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s?(\"|')?(?<depName>[\\w\\-/]+):(?<currentValue>[\\w\\.\\-]+)\"?(\"|')?"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
