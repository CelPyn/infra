{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {},
  "argocd": {},
  "kustomize": {},
  "regex": {
    "managerFilePatterns": [
      "^/kubernetes/.*\\.yaml$"
    ],
    "matchStrings": [
      "image:\\s?(\"|')?(?<depName>[\\w\\-/]+):(?<currentValue>[\\w\\.\\-]+)\"?(\"|')?"
    ],
    "datasourceTemplate": "docker"
  }
}
